<style>
/* TODO: move style to css file */


* {
  box-sizing: border-box;
}

@media only screen and (min-width: 800px) {
  body {
    max-width: 50rem; /* TODO: check if either this or the global css file max-width needs to be adjusted */
    padding: 2rem;
    margin: auto;
  }
}

.column-left {
  float: left;
  width: 30%;
  padding: 10px;
}
.column-right {
  float: left;
  width: 70%;
  padding: 10px;
}

#first-name, #last-name {
  font-size: 1.8em;
  font-weight: 600;
}

#experience-header {
  font-size: 25px;
  font-weight: 600;
  margin-bottom: 8px;
}

.project {
  padding: 5px 0;
}

.project:not(:last-child) {
  border-bottom: 1px dashed blue;
}

.project-time-period {
  float: right;
  font-size: small;
  padding-top: 3px;
}

.row:after { /* Clear floats after the columns */
  content: "";
  display: table;
  clear: both;
}

</style>

<div id="resume-container">

  <div class="column-left">
    <div>
      <span id="first-name">{{ first_name }}</span> <span id="last-name">{{ last_name }}</span>
    </div>
    <div>{{ job_title }}</div>
    {% if skills|length %}
    <div>
      <div>Skills</div>
      <ul>
      {% for skill in skills %}
      <li>{{ skill.name }}: {{ skill.level}}/5</li><!-- TODO: add stars/icons, and remove "/5" -->
      {% endfor %}
      </ul>
    </div>
    {% endif %}
    {% if languages|length %}
    <div>
      <div>Languages</div>
      <ul>
      {% for language in languages %}
      <li>{{ language.name }}: {{ language.level}}/5</li><!-- TODO: add stars/icons, and remove "/5" -->
      {% endfor %}
      </ul>
    </div>
    {% endif %}
    <div>TODO: telephone number</div>
    <div>TODO: email address</div>
    {% if static_site_domain_name is defined %}
    <div>
      <a href="https://{{ static_site_domain_name }}">{{ static_site_domain_name }}</a>
    </div>
    {% endif %}
    {% if linkedin_account_name is defined %}
    <div>
      <a href="https://www.linkedin.com/in/{{ linkedin_account_name }}" target="_blank">linkedin.com/in/{{ linkedin_account_name }}</a>
    </div>
    {% endif %}
  </div>

  <div id="experience-container" class="column-right">
    <div id="experience-header">Experience</div>
    {% for project in projects %}
    <div class="project">
      <div class="project-header">
        <div>
          <span>
            {{ project.employer }} {% if project.employer_location is defined %} ({{ project.employer_location }}) {% endif %}
          </span>
          <span class="project-time-period"> {{ project.time_period | upper }}</span>
        </div>
        <div>
          <span><b>{{ project.job_title }}:</b></span>
          <span>{{ project.description }}</span>
        </div>
      </div>
      <!-- TODO: remove, or add a filter feature
      {% if project.technologies|length %}
        <ul>
        {% for technology in project.technologies %}
        <li>{{ technology }}</li>
        {% endfor %}
        </ul>
      {% endif %}
      -->
    </div>
    {% endfor %}
  </div>

</div>

